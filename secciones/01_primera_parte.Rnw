<<>>=
resumir <- function(.df) {
 my_skim <- skim_with(
  base = NULL,
  numeric = sfl(media      = ~ mean(., na.rm = TRUE),
                mediana    = ~ median(., na.rm = TRUE),
                desviacion = ~ sd(., na.rm = TRUE)), append = F)
 my_skim(.df) |> 
  rename_with(~ str_replace_all(.x, "numeric\\.", "")) |> 
  select(-c(1:2))
}
@



