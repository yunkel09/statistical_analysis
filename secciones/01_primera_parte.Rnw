# función para crear tablas genéricas
tabla <- function(df, cap = "prueba") {
 
 df %>% 
  kbl(booktabs = TRUE, linesep = "", caption = cap) %>% 
  kable_paper(full_width = F) %>% 
  kable_styling(latex_options = "HOLD_position", table.envir = "float")
 
}

